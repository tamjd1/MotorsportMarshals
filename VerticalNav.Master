<%@ Master Language="C#" AutoEventWireup="true" CodeBehind="VerticalNav.master.cs" Inherits="WebApplication1.VerticalNav" %>

<!DOCTYPE html>

<html lang="en">
<%--<html xmlns="http://www.w3.org/1999/xhtml">--%>
<head runat="server">
        <meta charset="utf-8" />
