<body>
    <form id="Form1" runat="server">
    <asp:ScriptManager ID="ScriptManager1" runat="server">
        <Scripts>
            <%--Framework Scripts--%>
            <asp:ScriptReference Name="MsAjaxBundle" />
            <asp:ScriptReference Name="jquery" />
            <asp:ScriptReference Name="jquery.ui.combined" />
            <asp:ScriptReference Name="WebForms.js" Assembly="System.Web" Path="~/Scripts/WebForms/WebForms.js" />
            <asp:ScriptReference Name="WebUIValidation.js" Assembly="System.Web" Path="~/Scripts/WebForms/WebUIValidation.js" />
            <asp:ScriptReference Name="MenuStandards.js" Assembly="System.Web" Path="~/Scripts/WebForms/MenuStandards.js" />
            <asp:ScriptReference Name="GridView.js" Assembly="System.Web" Path="~/Scripts/WebForms/GridView.js" />
            <asp:ScriptReference Name="DetailsView.js" Assembly="System.Web" Path="~/Scripts/WebForms/DetailsView.js" />
            <asp:ScriptReference Name="TreeView.js" Assembly="System.Web" Path="~/Scripts/WebForms/TreeView.js" />
            <asp:ScriptReference Name="WebParts.js" Assembly="System.Web" Path="~/Scripts/WebForms/WebParts.js" />
            <asp:ScriptReference Name="Focus.js" Assembly="System.Web" Path="~/Scripts/WebForms/Focus.js" />
            <asp:ScriptReference Name="WebFormsBundle" />
            <asp:ScriptReference Path="http://code.jquery.com/jquery-1.9.1.js" />
            <asp:ScriptReference Path="http://code.jquery.com/ui/1.10.3/jquery-ui.js" />
            <%--Site Scripts--%>
        </Scripts>
    </asp:ScriptManager>
        <script>
            $(document).ready(function () {
                $("#body").height($(window).height() - $("footer").height() - $("header").height() - $("#top").height() - $("#bottom").height() - 50);
            });
        </script>
                <div id="top" class="checkeredFlags"></div>
    <header>
                <div id="logoDiv">
                    <asp:ImageButton ID="logo" runat="server" ImageUrl="~/Images/car_black.png" PostBackUrl="~/Home.aspx"/>
                    <asp:ImageButton ID="text" runat="server" ImageUrl="~/Images/text_black.png" PostBackUrl="~/Home.aspx" />
                </div>
                <div id="nextRace" class="float-right">
                    <asp:Label ID="lblNextRace" runat="server"></asp:Label>
                </div>
                <nav id="navbar"> 
                    <ul> 
                        <li><a id="lnkHome" runat="server" href="~/Home.aspx">Home</a></li>
                        <li><a id="lnkRegistration" runat="server" href="~/Registration.aspx">Registration</a></li>
                        <li><a id="lnkForum" runat="server" href="~/Forum.aspx">Forum</a></li>
                        <li><a id="lnkNewMarshals" runat="server" href="~/NewMarshals.aspx">New Marshals</a></li>
                        <%--<li><a id="lnkFacebook" runat="server" href="https://www.facebook.com/motorsportmarshals">Facebook</a></li>
                        <li><a id="lnkTwitter" runat="server" href="https://twitter.com/MMS_Marshals">Twitter</a></li>--%>
                        <li><a id="lnkDevelopmentLog" runat="server" href="~/DevelopmentLog.aspx">Development Log</a></li>
                    </ul>
                </nav>
    </header>

    <div id="body">
        <div id="daysUntil">

        </div>
        <asp:ContentPlaceHolder runat="server" ID="FeaturedContent" />
        <section class="content-wrapper main-content clear-fix">
